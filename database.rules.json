{
  "rules": {
    ".read": "false",
    ".write": "false",
    "polymons": {
      ".read": "true",
      "$polymon": {
        "lastSeen": {
          "lat": {},
          "lng": {},
          "timestamp": {}
        }
      }
    },
    "references": {
      "$reference": {
        ".read": "auth != null"
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null && $userId === auth.uid",
        "player": {
          "activeBattleId": {}
        },
        "team": {
          ".read": "auth != null",
          "$teamPosition": {
            ".validate": "newData.child('index').val() < 5 && newData.child('index').val() > -1 && newData.hasChild('polydexId')"
          }
        },
        "polydex": {},
        "achievements": {},
        "notifications": {
          "$notification": {
            "acknowledged": {
              ".validate": "newData.isBoolean()",
              ".write": "$userId === auth.uid"
            }
          }
        },
        "tournamentQueue": {
          ".write": "$userId === auth.uid"
        },
        "catchQueue": {
          ".write": "$userId === auth.uid"
        },
        "battleQueue": {
          ".write": "$userId === auth.uid"
        },
        "teamQueue": {
          ".write": "$userId === auth.uid"
        }
      }
    },
    "tournaments": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('admin').val() === true",
      "$tournament": {
        ".read": "true",
        "createdAt": {},
        "secret": {},
        "currentBattleId": {},

        "championUserId": {},
        "playerOneUserId": {},
        "playerTwoUserId": {},

        "rounds": {
          "$round": {
            "battleId": {},

            "playerOneUserId": {},
            "playerTwoUserId": {},
            "winnerUserId": {},

            "recordedAt": {}
          }
        }
      }
    },
    "battles": {
      "$battle": {

        "createdAt": {},
        "startedAt": {},
        "finishedAt": {},

        "initiatingUserId": {},
        "defendingUserId": {},

        "currentRound": {},
        "maxRounds": {},

        "tournamentId": {},

        "state": {
          "$userId": {
            ".validate": "$userId === data.parent().parent().child('initiatingUserId').val() || $userId === data.parent().parent().child('defendingUserId').val()",
            "heartbeat": {
              ".validate": "newData.isNumber() && newData.val() <= now && (!data.exists() || newData.val() > data.val())"
            },
            "moves": {
              "$move": {
                "round": {},
                "polydexId": {
                  ".validate": "root.child('users').child($userId).child('polydex').child(data.val()).exists()"
                },
                "attributeName": {
                  ".validate": "newData.isString() && newData.val().matches(/^(attack|focus|counter)$/)"
                }
              }
            }
          }
        },

        "status": {
          ".read": "auth != null",

          "players": {
            "$userId": {
              "ready": {},
              "waiting": {},
              "health": {}
            }
          },

          "engaged": {},

          "rounds": {
            "$round": {
              "$user": {
                "index": {},
                "polydexId": {},
                "gotBonus": {},
                "attributeName": {},
                "randomModifier": {},
                "damageDelta": {}
              }
            }
          },

          "winningUserId": {}
        }
      }
    }
  }
}
